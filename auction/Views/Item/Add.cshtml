@model assignment1web.Models.ItemViewModel

@{
    ViewData["Title"] = "Sell item";
    var error = TempData["errorMessage"]?.ToString();

}

<h1>Put Item on Auction</h1>

<hr />
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">
        <strong>Error! </strong>@error
        <button type="button" class="btn-close float-end" data-bs-dissmiss="alert"></button>

    </div>
}



<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinimumBid" class="control-label"></label>
                <input asp-for="MinimumBid" class="form-control" />
                <span asp-validation-for="MinimumBid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuctionStartDate" class="control-label"></label>
                <input asp-for="AuctionStartDate" class="form-control" type="date" />
                <span asp-validation-for="AuctionStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuctionEndDate" class="control-label"></label>
                <input asp-for="AuctionEndDate" class="form-control" type="date" />
                <span asp-validation-for="AuctionEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Productdescription" class="control-label"></label>
                <input asp-for="Productdescription" class="form-control" />
                <span asp-validation-for="Productdescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssetCondition" class="control-label"></label>
                <select asp-for="AssetCondition" class="form-control">
                    <option>Brand new</option>
                    <option>Very Good</option>
                    <option>Good</option>
                    <option>Poor</option>
                </select>
                <span asp-validation-for="AssetCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemImage" class="control-label"></label>
                <input asp-for="ItemImage" class="form-control" type="file" />
                <span asp-validation-for="ItemImage" class="text-danger"></span>
            </div>


            <br /><br /><br />
            <div class="form-group">
                <input type="submit" value="Put on Auction" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
