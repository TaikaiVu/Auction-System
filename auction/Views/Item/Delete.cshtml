@model assignment1web.Models.ItemViewModel

@{
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<h3>Please confirm to delete the following item: </h3>

<hr />
@if (!string.IsNullOrWhiteSpace(errorMessage))
{
      <div class="alert alert-danger">
        <strong>Error! </strong>@errorMessage
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <div class="form-group">
                <label asp-for="ItemId" class="control-label"></label>
                <input asp-for="ItemId" class="form-control" asp-for="ItemId" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="MinimumBid" class="control-label"></label>
                <input asp-for="MinimumBid" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="AuctionStartDate" class="control-label"></label>
                <input asp-for="AuctionStartDate" class="form-control" type="date"readonly />
            </div>
            <div class="form-group">
                <label asp-for="AuctionEndDate" class="control-label"></label>
                <input asp-for="AuctionEndDate" class="form-control" type="date" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control"  readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Productdescription" class="control-label"></label>
                <input asp-for="Productdescription" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="AssetCondition" class="control-label"></label>
                  <select asp-for="AssetCondition" class="form-control" readonly>
                    <option>Brand new</option>
                    <option>Very Good</option>
                    <option>Good</option>
                    <option>Poor</option>
                </select>
            </div>

             <dt class = "col-sm-2"> Image: </dt>
             <dd class = "col-sm-10"> <img height="320" width="450" src=" @Html.DisplayFor(model => model.ImageUrl)" /> </dd>
                   
             
       
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
